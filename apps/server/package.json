{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:local": "turso dev --db-file local.db",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/trpc": "^1.1.0",
    "@libsql/client": "^0.15.10",
    "@trpc/client": "^11.4.4",
    "@trpc/server": "^11.4.4",
    "better-auth": "^1.3.5-beta.6",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "elysia": "^1.3.8",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/node": "^24.2.1",
    "drizzle-kit": "^0.31.4",
    "tsdown": "^0.12.9",
    "typescript": "^5.9.2"
  }
}
